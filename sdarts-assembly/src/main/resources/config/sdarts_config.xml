	<!-- to configure the SDARTS server. -->
	<back-end-lsp>
		<!-- The "classname" entry tells SDARTS which wrapper to use -->
		<!-- sdarts.backend.impls.xml.XMLBackEndLSP is used for the XML collections -->
		<classname>edu.columbia.cs.sdarts.backend.impls.xml.XMLBackEndLSP</classname>
		<!-- The name that the subcollection will be known by -->
		<name>aides</name>
		<!-- The description of the subcollection -->
		<description>Aides Medical Collection</description>
		<!-- The query language(s) supported by this subcollection -->
		<!-- You can have more than one of these if you want -->
		<!-- Usually this is only starts -->
		<query-language>starts</query-language>
	</back-end-lsp>
	<back-end-lsp>
		<!-- The "classname" entry tells SDARTS which wrapper to use -->
		<!-- sdarts.backend.impls.text.TextBackEndLSP is used for the text collections -->
		<classname>edu.columbia.cs.sdarts.backend.impls.text.TextBackEndLSP</classname>
		<!-- The name that the subcollection will be known by -->
		<name>20groups</name>
		<!-- The description of the subcollection -->
		<description>20 newsgroups from 1993</description>
		<!-- The query language(s) supported by this subcollection -->
		<!-- You can have more than one of these if you want -->
		<!-- Usually this is only starts -->
		<query-language>starts</query-language>
	</back-end-lsp>
	<back-end-lsp>
		<!-- The "classname" entry tells SDARTS which wrapper to use -->
		<!-- sdarts.backend.www.WWWBackEndLSP is used for the web-accessible collections -->
		<classname>edu.columbia.cs.sdarts.backend.www.WWWBackEndLSP</classname>
		<!-- The name that the subcollection will be known by -->
		<name>pubmed</name>
